<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <HorizontalScrollView android:layout_height="wrap_content" android:id="@+id/horizontalScrollView1" android:layout_alignParentBottom="true" android:layout_width="match_parent">
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="match_parent" android:orientation="horizontal">
            <Button android:layout_height="wrap_content" android:id="@+id/profile_layout_btn_posts" android:layout_width="wrap_content" android:text="Posts"></Button>
            <Button android:layout_height="wrap_content" android:id="@+id/profile_layout_btn_questions" android:layout_width="wrap_content" android:text="Questions"></Button>
            <Button android:layout_height="wrap_content" android:id="@+id/profile_layout_btn_friend" android:layout_width="wrap_content" android:text="Friends"></Button>
            <Button android:layout_height="wrap_content" android:id="@+id/profile_layout_btn_fav" android:layout_width="wrap_content" android:text="Favorites"></Button>
            <Button android:layout_height="wrap_content" android:id="@+id/profile_layout_btn_tags" android:layout_width="wrap_content" android:text="Tags"></Button>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
