<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- draw background -->
	<item android:left="0dip" android:right="0dip"> 
		<shape android:shape="rectangle">
            <stroke
                android:width="1dip"
                android:color="@color/textgray" />
	        <padding
               android:left="3dip"
               android:top="3dip"
               android:right="3dip"
               android:bottom="3dip" />
			<solid android:color="#ffffff" />
		</shape>
	</item>
	<!-- draw inner gray border -->
	<item android:left="0dip" android:right="0dip"> 
		<shape android:shape="rectangle">
			<padding
               android:left="10dip"
               android:top="2dip"
               android:right="10dip"
               android:bottom="2dip" />
			<solid android:color="@color/black" />
		</shape>
	</item>	
</layer-list>