<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- draw bottom line to fill the spaces between tabs -->
	<item android:top="30dip"> 
		<shape android:shape="rectangle">
			<solid android:color="#ffffff" />
		</shape>
	</item>
	<!-- leave bottom line only 1px of height, the rest is masked out -->
	<item android:top="30dip" android:bottom="1px">
		<shape android:shape="rectangle">
			<solid android:color="#f2f2ea" />
		</shape>
	</item>
	<!-- draw tab background -->
	<item android:left="0dip" android:right="1dip"> 
		<shape android:shape="rectangle">
			<corners android:bottomLeftRadius="0dp"
				android:bottomRightRadius="0dp" 
				android:topLeftRadius="0dip"
				android:topRightRadius="0dip"
				/>
			<solid android:color="#f2f2ea" />
		</shape>
	</item>
	<!-- mask out the bottom line of the tab shape -->
	<item android:top="30dip" android:left="1dip" android:right="1dip">
		<shape android:shape="rectangle">
			<solid android:color="#f2f2ea" />
		</shape>
	</item>
</layer-list>